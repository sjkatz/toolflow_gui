#ifndef PORT_H
#define PORT_H

#include <QString>

class Port
{
public:
    enum Direction {
             IN = 0,
             OUT = 1,
             INOUT = 2
         };
    enum Type {
             STD_LOGIC = 0,
             STD_LOGIC_VECTOR = 1
         };

    Port(QString name = QString(), Direction direction = IN, Type type = STD_LOGIC, int msb = 0, int lsb = 0, int id = 0);
    Port(Port* ref);

    int id();
    void setId(int id);
    QString name();
    void setName(QString name);
    Direction direction();
    void setDirection(Direction direction);
    Type type();
    void setType(Type type);
    int msb();
    void setMsb(int msb);
    int lsb();
    void setLsb(int lsb);
    int width();
    void setWidth(int width);

private:
    int d_id;
    QString d_name;
    Direction d_direction;
    Type d_type;
    int d_msb;
    int d_lsb;
    int d_width;
};

#endif // PORT_H
